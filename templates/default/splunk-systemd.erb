# systemd service file for splunk

[Unit]
Description=Splunk
After=network.target

[Service]
Type=forking
RemainAfterExit=no
<% if ! @runasroot %>
User=splunk
Group=splunk
<% end %>
LimitNOFILE=65536
ExecStart=<%= @splunkcmd %> start --accept-license --answer-yes --no-prompt
ExecStop=<%= @splunkcmd %> stop
ExecReload=<%= @splunkcmd %> restart
PIDFile=<%= @splunkdir %>/var/run/splunk/splunkd.pid

[Install]
WantedBy=multi-user.target
Alias=splunk.service
